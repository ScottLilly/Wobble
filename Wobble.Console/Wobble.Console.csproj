  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Wobble.Core\Wobble.Core.csproj" />
    <ProjectReference Include="..\Wobble.Models\Wobble.Models.csproj" />
